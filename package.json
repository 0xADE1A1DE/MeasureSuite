{
  "name": "measuresuite",
  "version": "1.0.0",
  "description": "Typescript wrapper on the measure function",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "cpu": [
    "x64"
  ],
  "os": [
    "linux"
  ],
  "gypfile": true,
  "scripts": {
    "postinstall": "tsc -p .",
    "test": "jest --coverage",
    "lint": "eslint .",
    "formatting": "prettier -c ./**/*.ts"
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 110
  },
  "repository": {
    "type": "git",
    "homepage": "https://github.com/0xADE1AIDE/MeasureSuite.git"
  },
  "keywords": [
    "measure",
    "intel"
  ],
  "author": "joel.kuepper@adelaide.edu.au",
  "contributors": [
    "david.wu@student.adelaide.edu.au"
  ],
  "license": "ISC",
  "homepage": "https://github.com/0xADE1AIDE/MeasureSuite#readme",
  "dependencies": {
    "lodash": "^4.17.21",
    "measure-addon": "file:./build/Release/measuresuite.node"
  },
  "devDependencies": {
    "@types/jest": "^28.1.5",
    "@types/lodash": "^4.14.178",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "node-gyp": "^9.0.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "coverageReporters": [
      [
        "cobertura",
        {
          "file": "coverage.xml"
        }
      ],
      "text",
      "html"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/ts/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "./src/*.ts"
    ],
    "verbose": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "*.js",
      "dist",
      "coverage"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        1,
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
