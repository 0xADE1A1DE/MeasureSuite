{
  "name": "measuresuite",
  "version": "2.0.0",
  "description": "Typescript wrapper around libmeasuresuite",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "./dist/index.js",
    "./dist/index.d.ts",
    "./dist/measuresuite.node"
  ],
  "cpu": [
    "x64"
  ],
  "os": [
    "linux"
  ],
  "repository": {
    "type": "git",
    "homepage": "https://github.com/0xADE1AIDE/MeasureSuite.git"
  },
  "author": "joel.kuepper@adelaide.edu.au",
  "contributors": [
    "david.wu@student.adelaide.edu.au"
  ],
  "license": "Apache-2.0",
  "homepage": "https://0xade1a1de.github.io/MeasureSuite",
  "scripts": {
    "postinstall": "$npm_execpath run pack",
    "test": "vitest",
    "test-cov": "vitest --coverage",
    "lint-check": "eslint .",
    "lint-fix": "eslint . --fix",
    "format-check": "npx prettier --check \"./**/*.ts\" \"!./dist\"",
    "pack": "rollup --config rollup.config.js"
  },
  "gypfile": true,
  "prettier": {
    "trailingComma": "all",
    "printWidth": 110
  },
  "dependencies": {
    "measuresuite-native-module": "file:./dist/measuresuite.node"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitest/coverage-c8": "^0.26.2",
    "c8": "^7.12.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "node-gyp": "^9.3.1",
    "prettier": "^2.8.1",
    "rollup": "^3.9.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^5.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.3",
    "vitest": "^0.26.2"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "*.js",
      "dist",
      "coverage"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        1,
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
